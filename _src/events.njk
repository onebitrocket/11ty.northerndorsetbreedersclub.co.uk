---
title: "Events"
permalink: "/events/{% if pagination.pageNumber > 0 %}page-{{ pagination.pageNumber + 1 }}/{% endif %}"
layout: "layouts/base"
pagination:
  data: collections.eventposts
  size: 8
  alias: posts
tags:
  - primaryNav
eleventyNavigation:
  key: "Events"
  order: 5
---

<h1>{{title }}</h1>
{% if posts | length >= 1 %}
{% for item in posts %}
  <article class="article{% if item.data.featured_img %} thumb-left{% endif %}">
    {% if item.data.featured_img %}
      <div class="article-img">
        <img src="{{ item.data.featured_img }}?nf_resize=smartcrop&w=60&h=60" alt="{{ item.data.title }}">
      </div>
    {% endif %}
    <div class="article-body">
      <div class="article-title">
        <h3>{{ item.data.title }}</h3>
        <div class="article-meta">
          <p>{{ item.data.startDate | readableDate }}{% if item.data.endDate > item.data.startDate %} - {{ item.data.startDate | readableDate }}{% endif %}</p>
        </div>
      </div>
      <div class="article-desc"></div>
      <div class="article-footer">
        <a href="{{ item.data.page.url }}">Read more &raquo;</a>
      </div>
    </div>
  </article>
{% endfor %}
{% include "partials/pagination_listing.njk" %}
{% else %}
  <p>Sorry,there are no events currently scheduled</p>
{% endif %}

<hr>
<h2>Looking for other events</h2>

