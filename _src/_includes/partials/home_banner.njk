{%set banner = collections.homeBanner | reverse %}
<div class="container banner">
  {% for item in banner %}
    <a class="pod pod-img-bg" href="{{ item.url }}">
      <div class="pod-img">
        <img src="{{ item.data.featured_img }}?nf_resize=smartcrop&w=640&h=480" alt="{{ item.data.title }}">
      </div>
      <div class="pod-body">
        <div class="pod-title">
          <h3>{{ item.data.title }}</h3>
        </div>
        <div class="pod-desc">{{ item.data.desc }}</div>
        <div class="pod-footer"></div>
      </div>
    </a>
  {% endfor %}
</div>
